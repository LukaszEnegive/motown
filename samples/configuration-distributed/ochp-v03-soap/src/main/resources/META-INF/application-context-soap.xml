<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:task="http://www.springframework.org/schema/task"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                            http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <import resource="classpath:META-INF/soap-config.xml"/>
    <import resource="classpath:META-INF/spring/view-model-config.xml"/>

    <context:property-placeholder location="classpath:configViewModel.properties"
                                  ignore-resource-not-found="true"
                                  ignore-unresolvable="true"/>

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>

    <bean id="ochpProxyFactory" class="io.motown.ochp.v03.soap.client.OchpProxyFactory"/>

    <bean id="ochp03SoapClient" class="io.motown.ochp.v03.soap.client.Ochp03SoapClient">
        <property name="ochpProxyFactory" ref="ochpProxyFactory"/>
        <property name="chargingStationRepository" ref="chargingStationRepository"/>
        <property name="transactionRepository" ref="transactionRepository"/>
        <property name="serverAddress" value="${io.motown.ochp.server.address}" />
        <property name="username" value="${io.motown.ochp.username}" />
        <property name="password" value="${io.motown.ochp.password}" />
    </bean>

    <!-- OCHP task scheduling -->
    <bean id="ochpSchedulingService" class="io.motown.ochp.v03.soap.client.OchpSchedulingService">
        <property name="ochp03SoapClient" ref="ochp03SoapClient"/>
        <property name="transactionRepository" ref="transactionRepository"/>
        <property name="identificationRepository" ref="identificationRepository"/>
    </bean>
    <task:scheduled-tasks>
        <task:scheduled ref="ochpSchedulingService" method="executeAddCDRs" cron="${io.motown.ochp.addcdrs.cron}"></task:scheduled>
        <task:scheduled ref="ochpSchedulingService" method="executeSetRoamingAuthorizationList" cron="${io.motown.ochp.setauthorizationlist.cron}"></task:scheduled>
    </task:scheduled-tasks>

</beans>
